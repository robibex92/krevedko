{
  "name": "online-orders-backend",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "main": "src/server.js",
  "scripts": {
    "dev": "nodemon --watch src --ext js --exec \"node src/server.js\"",
    "build": "echo \"Backend is Node/Express - no build step\"",
    "start": "node src/server.js",
    "lint": "eslint . --ext js --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --ext js --fix",
    "format": "prettier --write \"src/**/*.{js,json,md}\"",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev --name init",
    "prisma:studio": "prisma studio",
    "prisma:seed": "node src/seed.js"
  },
  "prisma": {
    "seed": "node src/seed.js",
    "schema": "prisma/schema.prisma"
  },
  "dependencies": {
    "@prisma/client": "^5.22.0",
    "bcrypt": "^5.1.1",
    "compression": "^1.8.1",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "decimal.js": "^10.6.0",
    "dotenv": "^16.6.1",
    "express": "^4.21.2",
    "express-rate-limit": "^7.5.1",
    "heic-convert": "^2.1.0",
    "helmet": "^7.2.0",
    "joi": "^17.13.3",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.1",
    "multer": "^1.4.5-lts.1",
    "node-fetch": "^3.3.2",
    "nodemailer": "^7.0.9",
    "passport": "^0.7.0",
    "passport-google-oauth20": "^2.0.0",
    "passport-mailru": "^0.0.1",
    "passport-oauth": "^1.0.0",
    "passport-yandex": "^0.0.5",
    "redis": "^5.8.3",
    "sharp": "^0.34.4",
    "winston": "^3.18.3"
  },
  "devDependencies": {
    "@eslint/js": "^9.16.0",
    "@types/node": "^22.18.11",
    "eslint": "^9.37.0",
    "globals": "^15.15.0",
    "nodemon": "^3.1.10",
    "prettier": "^3.6.2",
    "prisma": "^5.22.0"
  }
}
